<?xml version="1.0" encoding="utf-8" ?>
<dialogBase:DialogBase
    x:Class="BA_Mobile.Core.Views.MessagePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:dialogBase="clr-namespace:BA_Mobile.Core.Views"
    xmlns:style="clr-namespace:BA_Mobile.Core.Styles">
    <dialogBase:DialogBase.ActionsPlaceHolder>
        <Grid ColumnDefinitions=".5*,.5*" HorizontalOptions="FillAndExpand">
            <Button
                Grid.ColumnSpan="2"
                Padding="0"
                Command="{Binding DestroyCommand}"
                CornerRadius="17"
                HeightRequest="35"
                HorizontalOptions="FillAndExpand"
                Style="{x:Static style:Styles.AcceptButton}" />
        </Grid>
    </dialogBase:DialogBase.ActionsPlaceHolder>
</dialogBase:DialogBase>