<?xml version="1.0" encoding="utf-8" ?>
<dialogBase:DialogBase
    x:Class="BA_Mobile.Core.Views.ConfirmPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:dialogBase="clr-namespace:BA_Mobile.Core.Views">
    <dialogBase:DialogBase.ActionsPlaceHolder>
        <Grid ColumnDefinitions=".5*,.5*" HorizontalOptions="FillAndExpand">
            <Button
                Grid.Column="0"
                Padding="0"
                BackgroundColor="#A7A7A7"
                Command="{Binding DestroyCommand}"
                CornerRadius="17"
                FontSize="Small"
                HeightRequest="35"
                Text="Hủy"
                TextColor="{DynamicResource WhiteColor}" />
            <Button
                Grid.Column="1"
                Padding="0"
                BackgroundColor="{StaticResource PrimaryColor}"
                Command="{Binding AgreeCommand}"
                CornerRadius="17"
                FontSize="Small"
                HeightRequest="35"
                Text="Đồng ý"
                TextColor="{DynamicResource WhiteColor}" />
        </Grid>
    </dialogBase:DialogBase.ActionsPlaceHolder>
</dialogBase:DialogBase>